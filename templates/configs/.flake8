# Flake8 configuration
# Python linting rules mapped to SoC Python Coding Convention

[flake8]
# Line length (Py-02-02) - Match Black default
max-line-length = 88

# Extend ignore for Black compatibility
# E203 - Whitespace before ':' (Black formats differently)
# E501 - Line too long (handled by max-line-length)
# W503 - Line break before binary operator (Black style)
extend-ignore = E203, E501, W503

# Select specific error codes
select = E, W, F, C

# McCabe complexity threshold
max-complexity = 10

# Exclude directories
exclude =
    .git,
    .venv,
    venv,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache

# Per-file ignores
per-file-ignores =
    __init__.py: F401
    test_*.py: S101
    *_test.py: S101

# === Rule to Error Code Mapping ===
#
# +----------+-------+----------------------------------------+
# | Rule ID  | Code  | Description                            |
# +----------+-------+----------------------------------------+
# | Py-02-02 | E501  | Line too long                          |
# | Py-02-03 | W291  | Trailing whitespace                    |
# | Py-02-03 | W293  | Blank line contains whitespace         |
# | Py-02-04 | E302  | Expected 2 blank lines                 |
# | Py-02-05 | E301  | Expected 1 blank line                  |
# | Py-03-02 | E401  | Multiple imports on one line           |
# | Py-03-04 | F401  | Module imported but unused             |
# | Py-03-04 | F403  | 'from module import *' used            |
# | Py-06-02 | E201  | Whitespace after '('                   |
# | Py-06-02 | E202  | Whitespace before ')'                  |
# | Py-06-04 | E211  | Whitespace before '('                  |
# | Py-06-06 | E221  | Multiple spaces before operator        |
# | Py-06-07 | E251  | Unexpected spaces around keyword       |
# | Py-07-01 | E225  | Missing whitespace around operator     |
# | Py-10-01 | E722  | Do not use bare 'except'               |
# +----------+-------+----------------------------------------+
