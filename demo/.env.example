# Agent-Context Demo Environment Configuration
# Copy this file to .env and fill in your values
#
# DO NOT commit .env to version control!

# ============================================================
# Atlassian (Jira/Confluence)
# ============================================================
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_EMAIL=your-email@example.com
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_PROJECT_KEY=PROJ

# Confluence configuration
# For Atlassian Cloud: use same domain with /wiki suffix
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_SPACE_KEY=YOUR_SPACE

# ============================================================
# GitLab
# ============================================================
# Get access token from: GitLab Settings -> Access Tokens
# Required scopes: api, read_repository (optionally write_repository)
GITLAB_BASE_URL=https://gitlab.example.com
GITLAB_PROJECT=namespace/project
# GITLAB_TOKEN is typically stored in ~/.secrets/gitlab-api-token

# ============================================================
# Demo Settings
# ============================================================
# Installation profile: full | minimal
PROFILE=full

# Skip E2E tests (online API calls)
SKIP_E2E=false

# Force overwrite existing files
FORCE=false

# ============================================================
# Demo Scenario Settings (Step 008)
# ============================================================
# These settings are used for E2E scenario execution

# GitLab repository name for demo
# When running via run-docker-parallel.sh, this is auto-generated as:
#   demo-agent-context-install-<os>
# DEMO_REPO_NAME=demo-agent-context-install-ubuntu

# GitLab group/namespace for repo creation
# DEMO_GITLAB_GROUP=your-group/subgroup

# Jira project for demo scenario (aligned with JIRA_PROJECT_KEY)
# DEMO_JIRA_PROJECT=SVI4  # Default: same as JIRA_PROJECT_KEY

# Confluence space for demo
# DEMO_CONFLUENCE_SPACE=~username

# Skip cleanup prompt (set to true for automated runs)
# SKIP_CLEANUP=true

# Enable Human-in-the-Loop pauses
# HITL_ENABLED=false

# ============================================================
# Secrets Location
# ============================================================
# Secrets should be stored in ~/.secrets/ with chmod 600
#
# ~/.secrets/atlassian-api-token   - Atlassian API token
# ~/.secrets/gitlab-api-token      - GitLab access token
# ~/.secrets/github-api-token      - GitHub personal access token (optional)
